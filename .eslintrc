---
parser: babel-eslint

plugins:
  - react

env:
  node: true
  es6: true

globals:
  window: false
  document: false
  React: false
  Relay: false

arrowFunctions: true
blockBindings: true
classes: true
defaultParams: true
destructuring: true
forOf: true
generators: true
modules: true
objectLiteralComputedProperties: true
objectLiteralShorthandMethods: true
objectLiteralShorthandProperties: true
spread: true
templateStrings: true

rules:
  # ERRORS
  brace-style: [2, stroustrup, allowSingleLine: true]
  camelcase: [2, properties: always]
  comma-style: [2, last]
  curly: [2, all]
  eol-last: 2
  eqeqeq: 2
  handle-callback-err: [2, error]
  no-undef-init: 2
  no-unreachable: 2
  no-unused-expressions: 2
  no-unused-vars: [2, {vars: all, args: after-used}]
  no-void: 2
  no-with: 2
  one-var: [2, { uninitialized: "always", initialized: "never" }]
  operator-assignment: [2, always]
  radix: 2
  semi-spacing: [2, {before: false, after: true}]
  semi: [2, always]
  space-after-keywords: [2, always]
  space-before-blocks: [2, always]
  space-before-function-paren: [2, {anonymous: always, named: always}]
  space-infix-ops: [2, int32Hint: false]
  space-return-throw-case: 2
  space-unary-ops: [2, {words: true, nonwords: false}]
  use-isnan: 2
  valid-typeof: 2
  wrap-iife: 2
  yoda: [2, never, exceptRange: true]

  # WARNINGS
  indent: [1, 4, SwitchCase: 1]
  key-spacing: [1, {beforeColon: false, afterColon: true}]
  new-parens: 1
  no-alert: 1
  no-array-constructor: 1
  no-caller: 1
  no-catch-shadow: 1
  no-cond-assign: 1
  no-constant-condition: 1
  no-delete-var: 1
  no-div-regex: 1
  no-dupe-args: 1
  no-dupe-keys: 1
  no-duplicate-case: 1
  no-empty-character-class: 1
  no-empty-label: 1
  no-empty: 1
  no-eval: 1
  no-ex-assign: 1
  no-extend-native: 1
  no-extra-bind: 1
  no-extra-boolean-cast: 1
  no-extra-semi: 1
  no-fallthrough: 1
  no-floating-decimal: 1
  no-func-assign: 1
  no-implied-eval: 1
  no-inner-declarations: [1, functions]
  no-invalid-regexp: 1
  no-irregular-whitespace: 1
  no-iterator: 1
  no-label-var: 1
  no-lonely-if: 1
  no-mixed-requires: [1, true]
  no-mixed-spaces-and-tabs: 1
  no-multi-spaces: 1
  no-multi-str: 1
  no-negated-in-lhs: 1
  no-new-object: 1
  no-new-require: 1
  no-new-wrappers: 1
  no-new: 1
  no-obj-calls: 1
  no-octal-escape: 1
  no-octal: 1
  no-param-reassign: 1
  no-path-concat: 1
  no-proto: 1
  no-redeclare: 1
  no-regex-spaces: 1
  no-return-assign: 1
  no-script-url: 1
  no-sequences: 1
  no-shadow-restricted-names: 1
  no-shadow: 1
  no-spaced-func: 1
  no-sparse-arrays: 1
  no-sync: 1
  no-throw-literal: 1
  no-trailing-spaces: 1
  no-undef: 1
  quote-props: [1, as-needed]
  quotes: [1, single, avoid-escape]

  # DISABLED
  block-scoped-var: 0
  comma-dangle: 0
  complexity: 0
  consistent-return: 0
  consistent-this: 0
  default-case: 0
  dot-notation: 0
  func-names: 0
  func-style: 0
  guard-for-in: 0
  max-len: [0, 120, 4]
  max-nested-callbacks: 0
  new-cap: 0
  newline-after-var: 0
  no-console: 0
  no-control-regex: 0
  no-debugger: 0
  no-eq-null: 0
  no-inline-comments: 0
  no-labels: 0
  no-lone-blocks: 0
  no-loop-func: 0
  no-multiple-empty-lines: 0
  no-native-reassign: 0
  no-nested-ternary: 0
  no-new-func: 0
  no-process-env: 0
  no-process-exit: 0
  no-reserved-keys: 0
  no-restricted-modules: 0
  no-self-compare: 0
  no-ternary: 0
  no-undefined: 0
  no-underscore-dangle: 0
  no-use-before-define: 0
  no-var: 0
  no-warning-comments: 0
  padded-blocks: 0
  sort-vars: 0
  space-in-brackets: 0
  space-in-parens: 0
  spaced-comment: [1, always, { "exceptions": ["*"] }]
  strict: 0
  valid-jsdoc: 0
  vars-on-top: 0
  wrap-regex: 0
